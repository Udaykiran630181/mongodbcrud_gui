<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Brand Management</h1>
    <!-- Fixed the typo from 'from' to 'form' and ensure the form is correctly submitting data -->
    <form action="/add" method="POST">
        <input type="text" name="name" placeholder="Brand Name" required>
        <input type="text" name="description" placeholder="Brand Description">
        <button type="submit">Add Brand</button>
    </form>

    <!-- List of brands -->
    <ul>
        <!-- Change 'brand' to 'brands' since that's the variable passed from the server -->
        <%brands.forEach(brand=>{%>
        <li>
            <strong><%=brand.name %></strong>:<%=brand.description%>
            <a href="/edit/<%=brand._id%>">Edit</a>
            <!-- Form for deleting the brand -->
            <form action="/delete/<%=brand._id%>" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
            </form>
        </li>
        <%})%>
    </ul>
</body>
</html>